@model E_Shop.Data.Models.Article

@{
    ViewData["Title"] = "Editácia článku";
}

<h2 class="mt-3 font-weight-bold text-success">@Model.Title</h2>

<hr />
<div class="row">
    <div class="col-sm-12">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" rows="10" class="form-control tinymce   "></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArticleType"></label>
                <select asp-for="ArticleType" asp-items="@Html.GetEnumSelectList<E_Shop.Data.Models.ArticleType>()"></select>
                <span asp-validation-for="ArticleType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Späť k zoznamu článkov</a>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/5.0.1/tinymce.min.js"></script>
    <script src="~/js/initTinyMCE.js"></script>
}